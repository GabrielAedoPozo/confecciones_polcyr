---
import Layout from '../layouts/Layout.astro';
import Header from '../components/header.astro';
import Footer from '../components/footer.astro';
import "../styles/style.css";
---

<Layout title="Productos - Confecciones POLCYR">
	<Header />
	
	<main class="products-page">
		<header class="page-header" style="--page-header-image:url('/confecciones_polcyr/img/p3.jpg'); --page-header-overlay:0.85">
			<div class="page-header__inner">
				<h1 class="page-header__title" data-es="Nuestros Productos" data-en="Our Products">Nuestros Productos</h1>
				<p class="page-header__subtitle" data-es="Fabricamos una amplia gama de productos textiles con los mejores materiales y la más alta calidad" data-en="We manufacture a wide range of textile products with the best materials and the highest quality">Fabricamos una amplia gama de productos textiles con los mejores materiales y la más alta calidad</p>
			</div>
		</header>

		<!-- Showcase de categorías rediseñado -->
		<section class="products-showcase">
			<div class="container">
				
				<!-- Intro mejorado -->
				<div class="showcase-intro">
					<h2 data-es="Lo que fabricamos" data-en="What we manufacture">Lo que fabricamos</h2>
					<p data-es="Más de 20 años de experiencia produciendo prendas textiles de alta calidad con algodón Pima peruano" data-en="Over 20 years of experience producing high-quality textile garments with Peruvian Pima cotton">Más de 20 años de experiencia produciendo prendas textiles de alta calidad con algodón Pima peruano</p>
				</div>

				<!-- Grid alternado mejorado -->
				<div class="products-masonry">
					
					<!-- Polos - Layout estándar -->
					<article class="product-card" id="polos">
						<div class="product-visual">
							<div class="product-image" style="--bg:url('/confecciones_polcyr/img/jersey.webp')"></div>
							<div class="product-badge" data-es="Más vendido" data-en="Best seller">Más vendido</div>
						</div>
						<div class="product-details">
							<span class="product-category" data-es="Categoría" data-en="Category">Categoría</span>
							<h3 data-es="Polos" data-en="Polo Shirts">Polos</h3>
							<p data-es="Confeccionados en algodón Pima peruano de 160-200 GSM, perfectos para uso corporativo, deportivo y casual. Personalización con bordado y estampado de alta calidad." data-en="Made from Peruvian Pima cotton of 160-200 GSM, perfect for corporate, sports and casual use. Customization with high-quality embroidery and printing.">Confeccionados en algodón Pima peruano de 160-200 GSM, perfectos para uso corporativo, deportivo y casual. Personalización con bordado y estampado de alta calidad.</p>
							<ul class="product-features">
								<li>Algodón Pima 100%</li>
								<li>160–200 GSM</li>
								<li data-es="Múltiples colores" data-en="Multiple colors">Múltiples colores</li>
							</ul>
						</div>
					</article>

					<!-- Poleras - Layout invertido -->
					<article class="product-card reverse" id="poleras">
						<div class="product-details">
							<span class="product-category" data-es="Categoría" data-en="Category">Categoría</span>
							<h3 data-es="Poleras" data-en="T-shirts">Poleras</h3>
							<p data-es="Camisetas en jersey 100% algodón con técnicas de estampado duraderas: serigrafía, vinilo y DTF. Ideales para uniformes corporativos y merchandising de marca." data-en="100% cotton jersey t-shirts with durable printing techniques: screen printing, vinyl and DTF. Ideal for corporate uniforms and brand merchandising.">Camisetas en jersey 100% algodón con técnicas de estampado duraderas: serigrafía, vinilo y DTF. Ideales para uniformes corporativos y merchandising de marca.</p>
							<ul class="product-features">
								<li>Jersey 100% algodón</li>
								<li>Serigrafía, vinilo, DTF</li>
								<li data-es="Amplia paleta de colores" data-en="Wide color palette">Amplia paleta de colores</li>
							</ul>
						</div>
						<div class="product-visual">
							<div class="product-image" style="--bg:url('/confecciones_polcyr/img/p4.png')"></div>
							<div class="product-badge" data-es="Popular" data-en="Popular">Popular</div>
						</div>
					</article>


					<!-- Delantales - Layout invertido -->
					<article class="product-card reverse" id="delantales">
						<div class="product-details">
							<span class="product-category" data-es="Categoría" data-en="Category">Categoría</span>
							<h3 data-es="Delantales Industriales" data-en="Industrial Aprons">Delantales Industriales</h3>
							<p data-es="Resistentes en drill, lona y gabardina para gastronomía, laboratorios y manufactura. Configuración de bolsillos personalizable según necesidad operativa." data-en="Resistant in drill, canvas and gabardine for gastronomy, laboratories and manufacturing. Customizable pocket configuration according to operational needs.">Resistentes en drill, lona y gabardina para gastronomía, laboratorios y manufactura. Configuración de bolsillos personalizable según necesidad operativa.</p>
							<ul class="product-features">
								<li>Drill / Lona / Gabardina</li>
								<li data-es="Bolsillos configurables" data-en="Configurable pockets">Bolsillos configurables</li>
								<li data-es="Alta resistencia" data-en="High strength">Alta resistencia</li>
							</ul>
						</div>
						<div class="product-visual">
							<div class="product-image" style="--bg:url('/confecciones_polcyr/img/delantales.webp')"></div>
							<div class="product-badge" data-es="Profesional" data-en="Professional">Profesional</div>
						</div>
					</article>

					<!-- Ropa Industrial - Layout estándar -->
					<article class="product-card" id="ropa-industrial">
						<div class="product-visual">
							<div class="product-image" style="--bg:url('/confecciones_polcyr/img/industrial.webp')"></div>
							<div class="product-badge" data-es="Certificado" data-en="Certified">Certificado</div>
						</div>
						<div class="product-details">
							<span class="product-category" data-es="Categoría" data-en="Category">Categoría</span>
							<h3 data-es="Uniformes Industriales" data-en="Industrial Uniforms">Uniformes Industriales</h3>
							<p data-es="Pantalones cargo, chalecos de seguridad con cintas reflectivas y chaquetas reforzadas. Cumplimiento de estándares industriales de seguridad para volúmenes corporativos." data-en="Cargo pants, safety vests with reflective tape and reinforced jackets. Compliance with industrial safety standards for corporate volumes.">Pantalones cargo, chalecos de seguridad con cintas reflectivas y chaquetas reforzadas. Cumplimiento de estándares industriales de seguridad para volúmenes corporativos.</p>
							<ul class="product-features">
								<li data-es="Cintas reflectivas" data-en="Reflective tape">Cintas reflectivas</li>
								<li data-es="Refuerzos de seguridad" data-en="Safety reinforcements">Refuerzos de seguridad</li>
								<li data-es="Volúmenes corporativos" data-en="Corporate volumes">Volúmenes corporativos</li>
							</ul>
						</div>
					</article>

					<!-- Personalizados - Layout invertido -->
					<article class="product-card reverse" id="personalizados">
						<div class="product-details">
							<span class="product-category" data-es="Categoría" data-en="Category">Categoría</span>
							<h3 data-es="Productos a Medida" data-en="Custom Products">Productos a Medida</h3>
							<p data-es="Diseño y fabricación 100% personalizable: tallas especiales, diseños exclusivos, combinación de telas y acabados únicos. Asesoría integral en desarrollo. Lead time 30-45 días." data-en="100% customizable design and manufacturing: special sizes, exclusive designs, fabric combinations and unique finishes. Comprehensive development consulting. Lead time 30-45 days.">Diseño y fabricación 100% personalizable: tallas especiales, diseños exclusivos, combinación de telas y acabados únicos. Asesoría integral en desarrollo. Lead time 30-45 días.</p>
							<ul class="product-features">
								<li data-es="100% personalizable" data-en="100% customizable">100% personalizable</li>
								<li data-es="Asesoría de diseño" data-en="Design consulting">Asesoría de diseño</li>
								<li>Lead time 30–45 días</li>
							</ul>
						</div>
						<div class="product-visual">
							<div class="product-image" style="--bg:url('/confecciones_polcyr/img/tendedora2.webp')"></div>
							<div class="product-badge" data-es="Exclusivo" data-en="Exclusive">Exclusivo</div>
						</div>
					</article>

				</div>

			</div>
		</section>
	</main>
	
	<Footer />
</Layout>

<style is:global>
	:root {
		--brand-blue: #0649a7;
		--brand-blue-light: #1565d8;
		--text-dark: #1e293b;
		--text-gray: #475569;
		--text-light: #64748b;
		--bg-light: #f8fafc;
		--border-light: #e2e8f0;
	}

	.products-page { margin-top: 80px; }
	.container { max-width: 1200px; margin: 0 auto; padding: 0 2rem; }

	/* Products Showcase con grid background */
	.products-showcase {
		padding: 5rem 0;
		background: linear-gradient(180deg, #fff, var(--bg-light));
		position: relative;
	}

	/* Patrón cuadriculado */
	.products-showcase::before {
		content: "";
		position: absolute;
		inset: 0;
		background-image: 
			linear-gradient(90deg, rgba(6,73,167,0.04) 2px, transparent 2px),
			linear-gradient(180deg, rgba(6,73,167,0.04) 2px, transparent 2px);
		background-size: 50px 50px;
		pointer-events: none;
		z-index: 0;
	}

	.products-showcase > .container { position: relative; z-index: 1; }

	/* Intro mejorado */
	.showcase-intro {
		text-align: center;
		max-width: 700px;
		margin: 0 auto 5rem;
	}
	.showcase-intro h2 {
		font-size: clamp(2.5rem, 5vw, 3.5rem);
		font-weight: 700;
		color: var(--brand-blue);
		margin: 0 0 1rem;
		line-height: 1.1;
	}
	.showcase-intro p {
		font-size: 1.15rem;
		color: var(--text-gray);
		line-height: 1.7;
		margin: 0;
	}

	/* Masonry alternado */
	.products-masonry {
		display: flex;
		flex-direction: column;
		gap: 4rem;
	}

	.product-card {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 3rem;
		align-items: center;
		background: white;
		border-radius: 24px;
		overflow: hidden;
		box-shadow: 0 12px 40px rgba(0,0,0,0.08);
		position: relative;
		padding: 2.5rem;
		transition: transform 0.3s ease, box-shadow 0.3s ease;
		opacity: 0;
		transform: translateY(30px);
		animation: fadeInCard 0.6s ease forwards;
	}
	.product-card:hover { transform: translateY(-8px); box-shadow: 0 20px 60px rgba(0,0,0,0.12); }
	.product-card.reverse { grid-template-columns: 1fr 1fr; }

	/* Línea decorativa diagonal */
	.product-card::before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		width: 6px;
		height: 120px;
		background: linear-gradient(180deg, var(--brand-blue), var(--brand-blue-light));
		border-radius: 0 0 999px 0;
	}

	/* Visual */
	.product-visual {
		position: relative;
	}
	.product-image {
		aspect-ratio: 4 / 3;
		border-radius: 16px;
		overflow: hidden;
		background: var(--bg) no-repeat center center / cover;
		box-shadow: 0 8px 24px rgba(0,0,0,0.08);
		transition: transform 0.4s ease;
	}
	.product-card:hover .product-image { transform: scale(1.05); }

	.product-badge {
		position: absolute;
		top: 1rem;
		right: 1rem;
		background: linear-gradient(135deg, var(--brand-blue), var(--brand-blue-light));
		color: white;
		padding: 0.5rem 1rem;
		border-radius: 999px;
		font-size: 0.85rem;
		font-weight: 700;
		box-shadow: 0 4px 16px rgba(6,73,167,0.3);
	}

	/* Details */
	.product-details {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}
	.product-category {
		text-transform: uppercase;
		font-size: 0.8rem;
		font-weight: 700;
		color: var(--brand-blue);
		letter-spacing: 0.1em;
	}
	.product-details h3 {
		font-size: clamp(2rem, 4vw, 2.5rem);
		font-weight: 700;
		color: var(--text-dark);
		margin: 0;
		line-height: 1.2;
	}
	.product-details p {
		font-size: 1.05rem;
		line-height: 1.7;
		color: var(--text-gray);
		margin: 0;
	}
	.product-features {
		list-style: none;
		padding: 0;
		margin: 1rem 0 0;
		display: flex;
		flex-wrap: wrap;
		gap: 0.75rem;
	}
	.product-features li {
		background: var(--bg-light);
		border: 1px solid var(--border-light);
		padding: 0.5rem 1rem;
		border-radius: 999px;
		font-size: 0.9rem;
		color: var(--text-dark);
		font-weight: 500;
	}

	/* Animación */
	@keyframes fadeInCard {
		from { opacity: 0; transform: translateY(30px); }
		to { opacity: 1; transform: translateY(0); }
	}

	/* Delays escalonados */
	.product-card:nth-child(2) { animation-delay: 0.1s; }
	.product-card:nth-child(3) { animation-delay: 0.2s; }
	.product-card:nth-child(4) { animation-delay: 0.3s; }
	.product-card:nth-child(5) { animation-delay: 0.4s; }
	.product-card:nth-child(6) { animation-delay: 0.5s; }

	/* Responsive */
	@media (max-width: 768px) {
		.product-card,
		.product-card.reverse {
			grid-template-columns: 1fr;
			gap: 2rem;
			padding: 2rem;
		}
		.products-masonry { gap: 3rem; }
	}

	@media (max-width: 480px) {
		.filter-buttons { justify-content: flex-start; overflow-x: auto; padding-bottom: 0.5rem; }
		.filter-btn { white-space: nowrap; flex-shrink: 0; }
		.category-banner { height: 250px; }
	}
</style>

<script is:inline>
	function translateProductsPage() {
		const language = localStorage.getItem('language') || 'es';
		document.querySelectorAll('[data-es]').forEach(element => {
			const esText = element.getAttribute('data-es');
			const enText = element.getAttribute('data-en');
			if (language === 'es' && esText) element.textContent = esText;
			else if (language === 'en' && enText) element.textContent = enText;
		});
	}

	function initCategoryAnimations() {
		const observer = new IntersectionObserver((entries) => {
			entries.forEach((entry, index) => {
				if (entry.isIntersecting) {
					setTimeout(() => {
						entry.target.classList.add('visible');
					}, index * 100);
				}
			});
		}, { threshold: 0.15 });

		document.querySelectorAll('.category-section').forEach(section => {
			observer.observe(section);
		});
	}

	window.addEventListener('languageChanged', translateProductsPage);

	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', () => {
			translateProductsPage();
			initCategoryAnimations();
		});
	} else {
		translateProductsPage();
		initCategoryAnimations();
	}
</script>
