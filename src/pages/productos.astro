---
import Layout from '../layouts/Layout.astro';
import Header from '../components/header.astro';
import Footer from '../components/footer.astro';
---

<Layout title="Productos - Confecciones POLCYR">
	<Header />
	
	<main class="products-page">
		<!-- Hero Section -->
		<section class="products-hero">
			<div class="products-hero-container">
				<div class="products-hero-content">
					<h1 data-es="Nuestros Productos" data-en="Our Products">Nuestros Productos</h1>
					<p data-es="Fabricamos una amplia gama de productos textiles con los mejores materiales y la más alta calidad" data-en="We manufacture a wide range of textile products with the best materials and the highest quality">Fabricamos una amplia gama de productos textiles con los mejores materiales y la más alta calidad</p>
				</div>
			</div>
		</section>


		<!-- Products Grid -->
		<section class="products-grid">
			<div class="container">
				<div class="products-container">
					
					<!-- Polos -->
					<div class="product-card" data-category="polos">
						<div class="product-image">
							<img src="/confecciones_polcyr/img/jersey.webp" alt="Polos Jersey" />
						</div>
						<div class="product-info">
							<h3 data-es="Polos Jersey" data-en="Jersey Polo Shirts">Polos Jersey</h3>
							<p data-es="Confeccionados en algodón jersey de alta calidad, perfectos para uso casual y empresarial" data-en="Made from high-quality jersey cotton, perfect for casual and business use">Confeccionados en algodón jersey de alta calidad, perfectos para uso casual y empresarial</p>
							<div class="product-features">
								<span class="feature" data-es="100% Algodón" data-en="100% Cotton">100% Algodón</span>
								<span class="feature" data-es="Tallas S-XXL" data-en="Sizes S-XXL">Tallas S-XXL</span>
							</div>
						</div>
					</div>

					<div class="product-card" data-category="polos">
						<div class="product-image">
							<img src="/confecciones_polcyr/img/pique.webp" alt="Polos Piqué" />
						</div>
						<div class="product-info">
							<h3 data-es="Polos Piqué" data-en="Piqué Polo Shirts">Polos Piqué</h3>
							<p data-es="Polo piqué camisero disponible en diversos colores, ideal para uniformes corporativos" data-en="Dress piqué polo available in various colors, ideal for corporate uniforms">Polo piqué camisero disponible en diversos colores, ideal para uniformes corporativos</p>
							<div class="product-features">
								<span class="feature" data-es="Algodón Pima" data-en="Pima Cotton">Algodón Pima</span>
								<span class="feature" data-es="Variedad de Colores" data-en="Variety of Colors">Variedad de Colores</span>
							</div>
						</div>
					</div>

					<div class="product-card" data-category="polos">
						<div class="product-image">
							<img src="/confecciones_polcyr/img/deportivo.webp" alt="Polos Deportivos" />
						</div>
						<div class="product-info">
							<h3 data-es="Polos Deportivos" data-en="Sports Polo Shirts">Polos Deportivos</h3>
							<p data-es="Polo deportivo con tecnología de secado rápido, perfecto para actividades físicas" data-en="Sports polo with quick-dry technology, perfect for physical activities">Polo deportivo con tecnología de secado rápido, perfecto para actividades físicas</p>
							<div class="product-features">
								<span class="feature" data-es="Secado Rápido" data-en="Quick Dry">Secado Rápido</span>
								<span class="feature" data-es="Transpirable" data-en="Breathable">Transpirable</span>
							</div>
						</div>
					</div>

					<!-- Delantales -->
					<div class="product-card" data-category="delantales">
						<div class="product-image">
							<img src="/confecciones_polcyr/img/delantales.webp" alt="Delantal con bolsillo" />
						</div>
						<div class="product-info">
							<h3 data-es="Delantales" data-en="Aprons">Delantales</h3>
							<p data-es="Delantal con bolsillo, resistente y cómodo para uso en cocina y servicios" data-en="Apron with pocket, resistant and comfortable for kitchen and service use">Delantal con bolsillo, resistente y cómodo para uso en cocina y servicios</p>
							<div class="product-features">
								<span class="feature" data-es="Con Bolsillo" data-en="With Pocket">Con Bolsillo</span>
								<span class="feature" data-es="Resistente" data-en="Resistant">Resistente</span>
							</div>
						</div>
					</div>

					<!-- Ropa Industrial -->
					<div class="product-card" data-category="ropa-industrial">
						<div class="product-image">
							<img src="/confecciones_polcyr/img/industrial.webp" alt="Ropa Industrial" />
						</div>
						<div class="product-info">
							<h3 data-es="Ropa Industrial" data-en="Industrial Clothing">Ropa Industrial</h3>
							<p data-es="Ropa de trabajo especializada con estándares de seguridad y durabilidad" data-en="Specialized work clothing with safety and durability standards">Ropa de trabajo especializada con estándares de seguridad y durabilidad</p>
							<div class="product-features">
								<span class="feature" data-es="Alta Resistencia" data-en="High Resistance">Alta Resistencia</span>
								<span class="feature" data-es="Seguridad" data-en="Safety">Seguridad</span>
							</div>
						</div>
					</div>

					<!-- Accesorios -->
					<div class="product-card" data-category="accesorios">
						<div class="product-image">
							<img src="/confecciones_polcyr/img/gorras.webp" alt="Gorras" />
						</div>
						<div class="product-info">
							<h3 data-es="Gorras" data-en="Caps">Gorras</h3>
							<p data-es="Gorro disponible en diversos colores, ideal para uniformes y promociones" data-en="Cap available in various colors, ideal for uniforms and promotions">Gorro disponible en diversos colores, ideal para uniformes y promociones</p>
							<div class="product-features">
								<span class="feature" data-es="Ajustable" data-en="Adjustable">Ajustable</span>
								<span class="feature" data-es="Personalizable" data-en="Customizable">Personalizable</span>
							</div>
						</div>
					</div>

					<!-- Poleras -->
					<div class="product-card" data-category="poleras">
						<div class="product-image">
							<img src="/confecciones_polcyr/img/poleras.webp" alt="Poleras" />
						</div>
						<div class="product-info">
							<h3 data-es="Poleras" data-en="T-shirts">Poleras</h3>
							<p data-es="Poleras de algodón suave y cómoda, perfecta para uso diario y promocional" data-en="Soft and comfortable cotton t-shirts, perfect for daily and promotional use">Poleras de algodón suave y cómoda, perfecta para uso diario y promocional</p>
							<div class="product-features">
								<span class="feature" data-es="Algodón Suave" data-en="Soft Cotton">Algodón Suave</span>
								<span class="feature" data-es="Corte Clásico" data-en="Classic Fit">Corte Clásico</span>
							</div>
						</div>
					</div>

					<div class="product-card" data-category="poleras">
						<div class="product-image">
							<img src="/confecciones_polcyr/img/canguros.webp" alt="Canguro" />
						</div>
						<div class="product-info">
							<h3 data-es="Canguros" data-en="Hoodies">Canguros</h3>
							<p data-es="Canguro con capucha y bolsillo frontal, ideal para temporadas frías" data-en="Hoodie with hood and front pocket, ideal for cold seasons">Canguro con capucha y bolsillo frontal, ideal para temporadas frías</p>
							<div class="product-features">
								<span class="feature" data-es="Con Capucha" data-en="With Hood">Con Capucha</span>
								<span class="feature" data-es="Bolsillo Canguro" data-en="Kangaroo Pocket">Bolsillo Canguro</span>
							</div>
						</div>
					</div>

					<!-- Accesorios Adicionales -->
					<div class="product-card" data-category="accesorios">
						<div class="product-image">
							<img src="/confecciones_polcyr/img/bolsos.webp" alt="Bolsos y mochilas" />
						</div>
						<div class="product-info">
							<h3 data-es="Bolsos y Mochilas" data-en="Bags and Backpacks">Bolsos y Mochilas</h3>
							<p data-es="Bolsas resistentes y mochilas funcionales para uso corporativo y promocional" data-en="Resistant bags and functional backpacks for corporate and promotional use">Bolsas resistentes y mochilas funcionales para uso corporativo y promocional</p>
							<div class="product-features">
								<span class="feature" data-es="Resistente" data-en="Resistant">Resistente</span>
								<span class="feature" data-es="Funcional" data-en="Functional">Funcional</span>
							</div>
						</div>
					</div>

					<!-- Promocionales -->
					<div class="product-card" data-category="promocionales">
						<div class="product-image">
							<img src="/confecciones_polcyr/img/bividi.webp" alt="Bividi" />
						</div>
						<div class="product-info">
							<h3 data-es="Bividi" data-en="Tank Tops">Bividi</h3>
							<p data-es="Camisetas sin mangas, ideales para actividades deportivas y promocionales" data-en="Sleeveless shirts, ideal for sports and promotional activities">Camisetas sin mangas, ideales para actividades deportivas y promocionales</p>
							<div class="product-features">
								<span class="feature" data-es="Sin Mangas" data-en="Sleeveless">Sin Mangas</span>
								<span class="feature" data-es="Deportivo" data-en="Sports">Deportivo</span>
							</div>
						</div>
					</div>

					<div class="product-card" data-category="promocionales">
						<div class="product-image">
							<img src="/confecciones_polcyr/img/articulos.webp" alt="Artículos diversos" />
						</div>
						<div class="product-info">
							<h3 data-es="Artículos Diversos" data-en="Various Items">Artículos Diversos</h3>
							<p data-es="Amplia gama de artículos promocionales personalizables según sus necesidades" data-en="Wide range of customizable promotional items according to your needs">Amplia gama de artículos promocionales personalizables según sus necesidades</p>
							<div class="product-features">
								<span class="feature" data-es="Personalizable" data-en="Customizable">Personalizable</span>
								<span class="feature" data-es="Variedad" data-en="Variety">Variedad</span>
