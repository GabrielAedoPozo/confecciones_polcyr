---
import Layout from '../layouts/Layout.astro';
import Header from '../components/header.astro';
import Footer from '../components/footer.astro';
import "../styles/style.css";
---

<Layout title="Sobre Nosotros - Confecciones POLCYR">
	<Header />
	
	<main class="about-page">
		<header class="page-header page-header--lg" style="--page-header-image:url('/confecciones_polcyr/img/nosotros3.webp'); --page-header-overlay:0.9">
			<div class="page-header__inner">
				<h1 class="page-header__title" data-es="Sobre nosotros" data-en="About us">Sobre nosotros</h1>
				<p class="page-header__subtitle" data-es="Más de 20 años fabricando prendas textiles de alta calidad" data-en="Over 20 years manufacturing high-quality textile garments">Más de 20 años fabricando prendas textiles de alta calidad</p>
			</div>
		</header>

		<section class="who-we-are">
			<div class="container">
				<div class="content-grid">
					<div class="text-content">
						<h2 data-es="Quiénes Somos" data-en="Who We Are">Quiénes Somos</h2>
						<p data-es="Fundada en 1999, Confecciones POLCYR S.R.L se ha dedicado a ofrecer soluciones textiles confiables, desarrollando amplia experiencia en producción y distribución para empresas corporativas. Nuestra orientación se centra en brindar calidad, eficiencia y atención personalizada, consolidando relaciones de confianza tanto en el mercado nacional como en exportación." data-en="Founded in 1999, Confecciones POLCYR S.R.L has been dedicated to offering reliable textile solutions, developing extensive experience in production and distribution for corporate companies. Our approach focuses on providing quality, efficiency and personalized attention, consolidating trust relationships both in the national market and in exports.">
							Fundada en 1999, Confecciones POLCYR S.R.L se ha dedicado a ofrecer soluciones textiles confiables, desarrollando amplia experiencia en producción y distribución para empresas corporativas. Nuestra orientación se centra en brindar calidad, eficiencia y atención personalizada, consolidando relaciones de confianza tanto en el mercado nacional como en exportación.
						</p>
						<blockquote>
							<p data-es="En Confecciones POLCYR trabajamos para ofrecer soluciones textiles confiables, combinando calidad, eficiencia y atención cercana en cada proyecto." data-en="At Confecciones POLCYR we work to offer reliable textile solutions, combining quality, efficiency and close attention in each project.">
								"En Confecciones POLCYR trabajamos para ofrecer soluciones textiles confiables, combinando calidad, eficiencia y atención cercana en cada proyecto."
							</p>
						</blockquote>
					</div>
					<div class="image-content">
						<img src="/confecciones_polcyr/img/nosotros2.webp" alt="Instalaciones POLCYR" />
					</div>
				</div>
			</div>
		</section>

		<section class="mission-vision">
			<div class="container">
				<div class="mv-grid">
					<div class="mission-card">
						<div class="card-icon">
							<svg width="48" height="48" viewBox="0 0 24 24" fill="currentColor">
								<path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
							</svg>
						</div>
						<h3 data-es="Nuestra Misión" data-en="Our Mission">Nuestra Misión</h3>
						<p data-es="Ser un socio confiable en la industria textil, ofreciendo soluciones con calidad, eficiencia y atención cercana, que protejan y potencien la inversión de nuestros clientes." data-en="To be a reliable partner in the textile industry, offering solutions with quality, efficiency and close attention, that protect and enhance our clients' investment.">
							Ser un socio confiable en la industria textil, ofreciendo soluciones con calidad, eficiencia y atención cercana, que protejan y potencien la inversión de nuestros clientes.
						</p>
					</div>
					
					<div class="vision-card">
						<div class="card-icon">
							<svg width="48" height="48" viewBox="0 0 24 24" fill="currentColor">
								<path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"/>
							</svg>
						</div>
						<h3 data-es="Nuestra Visión" data-en="Our Vision">Nuestra Visión</h3>
						<p data-es="Consolidarnos como una empresa textil orientada al cliente, destacando por la excelencia en nuestros procesos, calidad de servicio y capacidad de producción para mercados nacionales e internacionales." data-en="To consolidate ourselves as a client-oriented textile company, standing out for excellence in our processes, service quality and production capacity for national and international markets.">
							Consolidarnos como una empresa textil orientada al cliente, destacando por la excelencia en nuestros procesos, calidad de servicio y capacidad de producción para mercados nacionales e internacionales.
						</p>
					</div>
				</div>
			</div>
		</section>

		<section class="values-section">
			<div class="container">
				<div class="section-header">
					<h2 data-es="Nuestros Valores" data-en="Our Values">Nuestros Valores</h2>
				</div>
				
				<div class="values-grid">
					<div class="value-card">
						<div class="value-icon">
							<svg width="40" height="40" viewBox="0 0 24 24" fill="currentColor">
								<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
							</svg>
						</div>
						<h4 data-es="Calidad" data-en="Quality">Calidad</h4>
						<p data-es="Garantizamos excelencia en cada prenda que producimos." data-en="We guarantee excellence in every garment we produce.">Garantizamos excelencia en cada prenda que producimos.</p>
					</div>

					<div class="value-card">
						<div class="value-icon">
							<svg width="40" height="40" viewBox="0 0 24 24" fill="currentColor">
								<path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4z"/>
							</svg>
						</div>
						<h4 data-es="Confianza" data-en="Trust">Confianza</h4>
						<p data-es="Cumplimos con nuestros compromisos y generamos seguridad en nuestros clientes." data-en="We fulfill our commitments and generate security in our clients.">Cumplimos con nuestros compromisos y generamos seguridad en nuestros clientes.</p>
					</div>

					<div class="value-card">
						<div class="value-icon">
							<svg width="40" height="40" viewBox="0 0 24 24" fill="currentColor">
								<path d="M12 2l.09.75c.42-.02.83-.02 1.25 0L13.5 2l.34.75c.41.09.82.21 1.21.36l.09-.74.55.46c.35.29.68.61.98.96l-.55.64c.3.35.57.73.8 1.14l.73-.27.27.73c.15.39.27.8.36 1.21l-.75.34v.84l.75.34c-.09.41-.21.82-.36 1.21l-.27.73-.73-.27c-.23.41-.5.79-.8 1.14l.55.64c-.3.35-.63.67-.98.96l-.55-.46-.09.74c-.39.15-.8.27-1.21.36L13.5 22l-.16-.75c-.42.02-.83.02-1.25 0L12 22l-.34-.75c-.41-.09-.82-.21-1.21-.36l-.09.74-.55-.46c-.35-.29-.68-.61-.98-.96l.55-.64c-.3-.35-.57-.73-.8-1.14l-.73.27-.27-.73c-.15-.39-.27-.8-.36-1.21l.75-.34v-.84l-.75-.34c.09-.41.21-.82.36-1.21l.27-.73.73.27c.23-.41.5-.79.8-1.14l-.55-.64c.3-.35.63-.67.98-.96l.55.46.09-.74c.39-.15.8-.27 1.21-.36L12 2zm0 6c-2.21 0-4 1.79-4 4s1.79 4 4 4 4-1.79 4-4-1.79-4-4-4z"/>
							</svg>
						</div>
						<h4 data-es="Innovación" data-en="Innovation">Innovación</h4>
						<p data-es="Incorporamos tecnología y nuevas ideas en todos nuestros procesos." data-en="We incorporate technology and new ideas in all our processes.">Incorporamos tecnología y nuevas ideas en todos nuestros procesos.</p>
					</div>

					<div class="value-card">
						<div class="value-icon">
							<svg width="40" height="40" viewBox="0 0 24 24" fill="currentColor">
								<path d="M13 3c-4.97 0-9 4.03-9 9H1l3.89 3.89.07.14L9 12H6c0-3.87 3.13-7 7-7s7 3.13 7 7-3.13 7-7 7c-1.93 0-3.68-.79-4.94-2.06l-1.42 1.42C8.27 19.99 10.51 21 13 21c4.97 0 9-4.03 9-9s-4.03-9-9-9zm-1 5v5l4.28 2.54.72-1.21-3.5-2.08V8H12z"/>
							</svg>
						</div>
						<h4 data-es="Rapidez" data-en="Speed">Rapidez</h4>
						<p data-es="Entregamos soluciones eficientes sin comprometer la calidad." data-en="We deliver efficient solutions without compromising quality.">Entregamos soluciones eficientes sin comprometer la calidad.</p>
					</div>

					<div class="value-card">
						<div class="value-icon">
							<svg width="40" height="40" viewBox="0 0 24 24" fill="currentColor">
								<path d="M16 4c0-1.11.89-2 2-2s2 .89 2 2-.89 2-2 2-2-.89-2-2zm4 18v-6h2.5l-2.54-7.63A1.5 1.5 0 0 0 18.54 8H16c-.8 0-1.54.37-2.01 1l-2.54 3.4c-.28.37-.28.85 0 1.22L14 16.5V22h2v-3.5h2V22h2zM12.5 11.5c.83 0 1.5-.67 1.5-1.5s-.67-1.5-1.5-1.5S11 9.17 11 10s.67 1.5 1.5 1.5zM5.5 6c1.11 0 2-.89 2-2s-.89-2-2-2-2 .89-2 2 .89 2 2 2zm2 16v-7H9V9.5c0-.28-.22-.5-.5-.5H3c-.28 0-.5.22-.5.5V15H4v7h3.5z"/>
							</svg>
						</div>
						<h4 data-es="Compromiso" data-en="Commitment">Compromiso</h4>
						<p data-es="Nos involucramos con cada proyecto, asegurando resultados que superen las expectativas." data-en="We get involved with each project, ensuring results that exceed expectations.">Nos involucramos con cada proyecto, asegurando resultados que superen las expectativas.</p>
					</div>

					<div class="value-card">
						<div class="value-icon">
							<svg width="40" height="40" viewBox="0 0 24 24" fill="currentColor">
								<path d="M17 8C8 10 5.9 16.17 3.82 21.34l1.89.66.95-2.66c.03-.08.06-.17.09-.25.16-.43.43-.97.81-1.55C10.5 21 15.26 22 21 22H22v-2h-1c-4.97 0-9-4.03-9-9l4-2c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4c0 1.1.45 2.1 1.17 2.83z"/>
							</svg>
						</div>
						<h4 data-es="Sostenibilidad" data-en="Sustainability">Sostenibilidad</h4>
						<p data-es="Gestionamos nuestros procesos pensando en el respeto por el medio ambiente y la responsabilidad social." data-en="We manage our processes thinking about respect for the environment and social responsibility.">Gestionamos nuestros procesos pensando en el respeto por el medio ambiente y la responsabilidad social.</p>
					</div>
				</div>
			</div>
		</section>

		<section class="stats-section">
			<div class="container">
				<div class="stats-grid">
					<div class="stat-item">
						<div class="stat-number">25+</div>
						<div class="stat-label" data-es="Años de Experiencia" data-en="Years of Experience">Años de Experiencia</div>
					</div>
					<div class="stat-item">
						<div class="stat-number">200K+</div>
						<div class="stat-label" data-es="Prendas al Mes" data-en="Garments per Month">Prendas al Mes</div>
					</div>
					<div class="stat-item">
						<div class="stat-number">15+</div>
						<div class="stat-label" data-es="Clientes Nacionales" data-en="National Clients">Clientes Nacionales</div>
					</div>
					<div class="stat-item">
						<div class="stat-number">2</div>
						<div class="stat-label" data-es="Mercados Internacionales" data-en="International Markets">Mercados Internacionales</div>
					</div>
				</div>
			</div>
		</section>

		<section class="cta-section">
			<div class="container">
				<div class="cta-content">
					<h2 data-es="¿Listo para trabajar con nosotros?" data-en="Ready to work with us?">¿Listo para trabajar con nosotros?</h2>
					<p data-es="Contáctanos para conocer más sobre nuestras soluciones textiles personalizadas" data-en="Contact us to learn more about our personalized textile solutions">Contáctanos para conocer más sobre nuestras soluciones textiles personalizadas</p>
					<a href="#contacto" class="cta-button" data-es="Contactar Ahora" data-en="Contact Now">Contactar Ahora</a>
				</div>
			</div>
		</section>
	</main>
	
	<Footer />
</Layout>

<style>



	:root {
		--brand-blue: #0649a7;
		--brand-blue-light: #1565d8;
		--text-dark: #1e293b;
		--text-gray: #475569;
		--text-light: #64748b;
		--bg-light: #f8fafc;
		--border-light: #e2e8f0;
	}

	.about-page {
		margin-top: 80px;
	}

	/* Hero Section */
	.about-hero {
		padding: 5rem 2rem;
		background: linear-gradient(135deg, var(--bg-light) 0%, #e2e8f0 100%);
	}

	.about-hero-container {
		max-width: 1400px;
		margin: 0 auto;
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		align-items: center;
	}

	.about-hero-content h1 {
		font-size: clamp(3rem, 6vw, 4rem);
		font-weight: 700;
		color: var(--brand-blue);
		margin: 0 0 2rem 0;
		line-height: 1.1;
	}

	.about-hero-content p {
		font-size: 1.5rem;
		line-height: 1.6;
		color: var(--text-gray);
		margin: 0;
	}

	.about-hero-image {
		border-radius: 20px;
		overflow: hidden;
		box-shadow: 0 20px 60px rgba(0,0,0,0.15);
	}

	.about-hero-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		aspect-ratio: 4 / 3;
	}

	/* Container */
	.container {
		max-width: 1400px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	/* Who We Are */
	.who-we-are {
		padding: 5rem 0;
	}

	.content-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		align-items: center;
	}

	.text-content h2 {
		font-size: 2.5rem;
		font-weight: 700;
		color: var(--brand-blue);
		margin: 0 0 2rem 0;
	}

	.text-content p {
		font-size: 1.2rem;
		line-height: 1.7;
		color: var(--text-gray);
		margin-bottom: 2rem;
	}

	.text-content blockquote {
		background: var(--bg-light);
		padding: 2rem;
		border-left: 4px solid var(--brand-blue);
		border-radius: 12px;
		margin: 2rem 0 0 0;
	}

	.text-content blockquote p {
		font-size: 1.1rem;
		font-style: italic;
		color: var(--brand-blue);
		margin: 0;
	}

	.image-content {
		border-radius: 20px;
		overflow: hidden;
		box-shadow: 0 20px 60px rgba(0,0,0,0.15);
	}

	.image-content img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		aspect-ratio: 4 / 3;
	}

	/* Mission & Vision */
	.mission-vision {
		padding: 5rem 0;
	}

	.mv-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 3rem;
	}

	.mission-card, .vision-card {
		background: white;
		padding: 3rem 2rem;
		border-radius: 20px;
		text-align: center;
		box-shadow: 0 10px 30px rgba(0,0,0,0.08);
		transition: transform 0.3s ease;
	}

	.mission-card:hover, .vision-card:hover {
		transform: translateY(-8px);
	}

	.card-icon {
		width: 80px;
		height: 80px;
		background: linear-gradient(135deg, var(--brand-blue) 0%, var(--brand-blue-light) 100%);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		margin: 0 auto 2rem;
		color: white;
	}

	.mission-card h3, .vision-card h3 {
		font-size: 1.8rem;
		font-weight: 600;
		color: var(--text-dark);
		margin: 0 0 1.5rem 0;
	}

	.mission-card p, .vision-card p {
		font-size: 1.1rem;
		line-height: 1.6;
		color: var(--text-gray);
		margin: 0;
	}

	/* Values Section */
	.values-section {
		padding: 5rem 0;
	}

	.section-header {
		text-align: center;
		margin-bottom: 4rem;
	}

	.section-header h2 {
		font-size: 2.5rem;
		font-weight: 700;
		color: var(--brand-blue);
		margin: 0 0 1rem 0;
	}

	.section-header p {
		font-size: 1.2rem;
		color: var(--text-gray);
		margin: 0;
	}

	.values-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 2rem;
	}

	.value-card {
		background: white;
		padding: 2.5rem 2rem;
		border-radius: 16px;
		text-align: center;
		box-shadow: 0 8px 25px rgba(0,0,0,0.06);
		transition: all 0.3s ease;
		border-top: 4px solid var(--brand-blue);
	}

	.value-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 15px 40px rgba(0,0,0,0.1);
	}

	.value-icon {
		width: 60px;
		height: 60px;
		background: linear-gradient(135deg, var(--brand-blue) 0%, var(--brand-blue-light) 100%);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		margin: 0 auto 1.5rem;
		color: white;
	}

	.value-card h4 {
		font-size: 1.4rem;
		font-weight: 600;
		color: var(--text-dark);
		margin: 0 0 1rem 0;
	}

	.value-card p {
		font-size: 1rem;
		line-height: 1.6;
		color: var(--text-light);
		margin: 0;
	}

	/* Stats Section */
	.stats-section {
		padding: 5rem 0;
        background-color: #e3e9f1;
        color: white;
	}

	.stats-grid {
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		gap: 2rem;
	}

	.stat-item {
		text-align: center;
	}

	.stat-number {
		font-size: 3rem;
		font-weight: 800;
		line-height: 1;
		margin-bottom: 0.5rem;
	}

	.stat-label {
		font-size: 1.1rem;
		opacity: 0.9;
	}

	/* CTA Section */
	.cta-section {
		padding: 5rem 0;
		background: var(--bg-light);
	}

	.cta-content {
		text-align: center;
	}

	.cta-content h2 {
		font-size: 2.5rem;
		font-weight: 700;
		color: var(--text-dark);
		margin: 0 0 1rem 0;
	}

	.cta-content p {
		font-size: 1.2rem;
		color: var(--text-gray);
		margin: 0 0 2rem 0;
	}

	.cta-button {
		display: inline-block;
		background: var(--brand-blue);
		color: white;
		padding: 1rem 2.5rem;
		border: none;
		border-radius: 50px;
		font-size: 1.1rem;
		font-weight: 600;
		text-decoration: none;
		cursor: pointer;
		transition: all 0.3s ease;
		box-shadow: 0 8px 25px rgba(6, 73, 167, 0.3);
	}

	.cta-button:hover {
		background: var(--brand-blue-light);
		transform: translateY(-2px);
		box-shadow: 0 12px 35px rgba(6, 73, 167, 0.4);
	}

	/* Responsive */
	@media (max-width: 768px) {
		.about-hero-container,
		.content-grid,
		.mv-grid {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.values-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.stats-grid {
			grid-template-columns: repeat(2, 1fr);
			gap: 2rem;
		}

		.about-hero {
			padding: 3rem 1rem;
		}

		.about-hero-content h1 {
			font-size: 2.5rem;
		}

		.about-hero-content p {
			font-size: 1.2rem;
		}

		.container {
			padding: 0 1rem;
		}
	}

	@media (max-width: 480px) {
		.stats-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.about-hero-content h1 {
			font-size: 2rem;
		}

		.text-content h2,
		.section-header h2,
		.cta-content h2 {
			font-size: 2rem;
		}

		.mission-card, .vision-card {
			padding: 2rem 1.5rem;
		}

		.value-card {
			padding: 2rem 1.5rem;
		}
	}
</style>

<script is:inline>
	// Traductor para la página
	function translateAboutPage() {
		const language = localStorage.getItem('language') || 'es';
		
		document.querySelectorAll('[data-es]').forEach(element => {
			const esText = element.getAttribute('data-es');
			const enText = element.getAttribute('data-en');
			
			if (language === 'es' && esText) {
				element.textContent = esText;
			} else if (language === 'en' && enText) {
				element.textContent = enText;
			}
		});
	}

	// Escuchar cambios de idioma
	window.addEventListener('languageChanged', translateAboutPage);

	// Inicializar cuando el DOM esté listo
	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', translateAboutPage);
	} else {
		translateAboutPage();
	}

	// Animación de números
	function animateCounters() {
		const counters = document.querySelectorAll('.stat-number');
		
		const observer = new IntersectionObserver((entries) => {
			entries.forEach(entry => {
				if (entry.isIntersecting) {
					const counter = entry.target;
					const text = counter.textContent;
					const target = parseInt(text.replace(/[^\d]/g, ''));
					
					if (target > 0) {
						let current = 0;
						const increment = target / 50;
						const timer = setInterval(() => {
							current += increment;
							if (current >= target) {
								clearInterval(timer);
								current = target;
							}
							
							if (text.includes('K')) {
								counter.textContent = Math.floor(current) + 'K+';
							} else if (text.includes('+')) {
								counter.textContent = Math.floor(current) + '+';
							} else {
								counter.textContent = Math.floor(current);
							}
						}, 20);
					}
					
					observer.unobserve(counter);
				}
			});
		});
		
		counters.forEach(counter => observer.observe(counter));
	}

	// Inicializar animaciones
	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', animateCounters);
	} else {
		animateCounters();
	}
</script>
